<?xml version="1.0" encoding="UTF-8" ?>
<schema name="elements" version="1.5">
	<types>
		<fieldType name="int" class="solr.TrieIntField" precisionStep="0" positionIncrementGap="0" />
		<fieldType name="float" class="solr.TrieFloatField" precisionStep="0" positionIncrementGap="0" />
		<fieldType name="long" class="solr.TrieLongField" precisionStep="0" positionIncrementGap="0" />
		<fieldType name="double" class="solr.TrieDoubleField" precisionStep="0" positionIncrementGap="0" />
		<fieldType name="string" class="solr.StrField" sortMissingLast="true" />
	</types>
    <!-- Schema for metapi elements (climate, meteorological, hydrological and oceanographic parameters) -->
	<fields>
		<field name="_version_" type="long" indexed="true" stored="true" />
		<!-- metapi standard name of the element -->
		<field name="id" type="string" indexed="true" stored="true" required="true" />
		<!-- metapi standard name of the element -->
		<field name="siUnit" type="string" indexed="false" stored="true" required="true" />
		<!-- description of the element in en_US -->
		<field name="description" type="string" indexed="false" stored="true" required="true" />
		<!-- code of the element in KDVH -->
		<field name="cfName" type="string" indexed="true" stored="true" required="false" />
		<!-- unit of measure used for the element in KDVH -->
		<field name="cfUnit" type="string" indexed="false" stored="true" required="false" />		
		<!-- cell methods used for the element in KDVH -->
		<field name="cfCellMethods" type="string" indexed="false" stored="true" required="false" />		
		<!-- code of the element in KDVH -->
		<field name="kdvhCode" type="string" indexed="true" stored="true" required="false" />
		<!-- unit of measure used for the element in KDVH -->
		<field name="kdvhUnit" type="string" indexed="false" stored="true" required="false" />		
        <!-- reference to table in KDVH -->
        <field name="kdvhRef" type="string" indexed="false" stored="true" required="false" />      
  	</fields>
	<uniqueKey>id</uniqueKey>
</schema>
